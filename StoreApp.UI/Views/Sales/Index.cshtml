@model IEnumerable<StoreApp.UI.Models.Sale>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Total_Sale)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Total_Sale)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) 
            </td>
        </tr>
    }

    <tr>
        <th>
            <label for="@ViewBag.SalesSum">@string.Format("Total de Ventas: {0:C}", ViewBag.SalesSum)</label>
        </th>
        <th></th>
    </tr>

</table>
